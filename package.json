{
  "name": "pody",
  "version": "1.0.0",
  "description": "Electron app that embeds n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "n8n:prepare": "node scripts/build-n8n-tar-gz.js"
  },
  "keywords": [
    "electron",
    "n8n"
  ],
  "build": {
    "appId": "info.chenliang.pody",
    "productName": "Pody",
    "files": [
      "**/*",
      "!n8n-dist/**",
      "!n8n-dist.zip"
    ],
    "extraResources": [
      {
        "from": "n8n-dist.tar.gz",
        "to": "n8n-dist.tar.gz"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "forceCodeSigning": false
  },
  "author": "Pody",
  "devDependencies": {
    "archiver": "^7.0.1",
    "cross-env": "^10.0.0",
    "electron": "^27.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "extract-zip": "^2.0.1",
    "tar": "^7.4.3",
    "tree-kill": "^1.2.2"
  }
}
