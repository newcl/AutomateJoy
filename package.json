{
  "name": "pody",
  "version": "1.0.0",
  "description": "Electron app that embeds n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "n8n"
  ],
  "build": {
    "appId": "info.chenliang.pody",
    "productName": "Pody",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "directories": {
      "buildResources": "build"
    }
  },
  "author": "Pody Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "n8n": "^1.105.4",
    "tree-kill": "^1.2.2"
  }
}
