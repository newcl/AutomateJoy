{
  "name": "pody",
  "version": "1.0.0",
  "description": "Electron app that embeds n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:zip": "node scripts/build-with-zip.js",
    "prepare:zip": "node scripts/prepare-n8n-dist.js",
    "setup:n8n": "node scripts/setup-n8n-dist.js"
  },
  "keywords": [
    "electron",
    "n8n"
  ],
  "build": {
    "appId": "info.chenliang.pody",
    "productName": "Pody",
    "files": [
      "**/*",
      "!n8n-dist/**",
      "!n8n-dist.zip"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "forceCodeSigning": false
  },
  "author": "Pody",
  "devDependencies": {
    "archiver": "^7.0.1",
    "cross-env": "^10.0.0",
    "electron": "^27.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
