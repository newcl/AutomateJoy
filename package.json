{
  "name": "pody",
  "version": "1.0.0",
  "description": "Electron app that embeds n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:fast": "node scripts/optimize-build.js && electron-builder",
    "dist:clean": "rm -rf .cache .n8n-cache.json && npm run dist",
    "dist:unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --win --x64 --publish=never",
    "dist:fast:unsigned": "node scripts/optimize-build.js && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --win --x64 --publish=never",
    "dist:nsis:fast": "node scripts/prepare-n8n-dist.js && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --win --x64 --publish=never",
    "dist:optimized": "node scripts/optimize-n8n-dist.js && node scripts/optimize-build.js && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder-unsigned.json --win --x64 --publish=never",
    "dist:debug": "cross-env DEBUG=electron-builder electron-builder --config electron-builder-unsigned.json --win --x64 --publish=never",
    "dist:fast:debug": "node scripts/optimize-build.js && cross-env DEBUG=electron-builder electron-builder --config electron-builder-unsigned.json --win --x64 --publish=never",
    "debug:build": "node scripts/debug-build.js",
    "debug:nsis": "node scripts/check-nsis.js",
    "optimize:n8n": "node scripts/optimize-n8n-dist.js",
    "build": "node scripts/build-with-options.js",
    "check-n8n-cache": "node scripts/check-n8n-cache.js",
    "build-n8n-cache": "node scripts/build-n8n-cache.js"
  },
  "keywords": [
    "electron",
    "n8n"
  ],
  "build": {
    "appId": "info.chenliang.pody",
    "asar": true,
    "extraResources": [
      {
        "from": "n8n-dist/node_modules",
        "to": "n8n-dist/node_modules"
      },
      {
        "from": "n8n-dist/package.json",
        "to": "n8n-dist/package.json"
      },
      {
        "from": "n8n-dist/package-lock.json",
        "to": "n8n-dist/package-lock.json"
      }
    ],
    "productName": "Pody",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "directories": {
      "buildResources": "build"
    },
    "forceCodeSigning": false
  },
  "author": "Pody Team",
  "license": "MIT",
  "devDependencies": {
    "archiver": "^7.0.1",
    "cross-env": "^10.0.0",
    "electron": "^27.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
