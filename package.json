{
  "name": "AutomateJoy",
  "version": "1.0.0",
  "description": "Powered by n8n",
  "author": "Liang Chen",
  "repository": {
      "type": "git",
      "url": "https://github.com/newcl/pody.git"
    },
  
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "predist": "cd frontend && npm install && npm run build",
    "dist": "electron-builder",
    "n8n:prepare": "node scripts/build-n8n-tar-gz.js",
    "release": "npm run dist -- --publish always"
  },
  "keywords": [
    "electron",
    "n8n"
  ],
  "build": {
    "appId": "com.automatejoy",
    "productName": "AutomateJoy",
    "icon": "icons/icon.ico",
    "files": [
      "**/*",
      "!n8n-dist/**",
      "!n8n-dist.zip"
    ],
    "extraResources": [
      {
        "from": "n8n-dist.tar",
        "to": "n8n-dist.tar"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico",
      "signAndEditExecutable": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "newcl",
        "repo": "pody",
        "releaseType": "release"
      }
    ],
    "nsis": {
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico"
    },
    "forceCodeSigning": false
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "cross-env": "^10.0.0",
    "electron": "^27.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "extract-zip": "^2.0.1",
    "tar": "^7.4.3",
    "tree-kill": "^1.2.2"
  }
}
