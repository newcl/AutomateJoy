{
  "name": "pody",
  "version": "1.0.0",
  "description": "Electron app that embeds n8n",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:zip": "node scripts/build-with-zip.js",
    "prepare:zip": "node scripts/prepare-n8n-dist.js",
    "setup:n8n": "node scripts/setup-n8n-dist.js"
  },
  "keywords": [
    "electron",
    "n8n"
  ],
  "build": {
    "appId": "info.chenliang.pody",
    "asar": true,
    "extraResources": [
      {
        "from": "n8n-dist.zip",
        "to": "n8n-dist.zip"
      }
    ],
    "productName": "Pody",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pody",
      "deleteAppDataOnUninstall": false,
      "include": "build/installer-optimized.nsh",
      "perMachine": false,
      "runAfterFinish": false
    },
    "directories": {
      "buildResources": "build"
    },
    "forceCodeSigning": false,
    "compression": "store"
  },
  "author": "Pody Team",
  "license": "MIT",
  "devDependencies": {
    "archiver": "^7.0.1",
    "cross-env": "^10.0.0",
    "electron": "^27.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
